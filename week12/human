public class Human {

	int age;
	String name;
	double wealth;
	boolean hasVehicle;
	double hunger;
	int food;
	Vehicle[]vehicles; //create an array of vehicles
	
	public Human() {//Constructor new Human();
		this.age=0;//this refers to the object
		this.name="";
		this.wealth=0.0;
		this.hasVehicle=false;
		this.hunger=5.0;
		this.food=5;
		this.vehicles = new Vehicle[100];
	}
	public int numberOfVehicles() {
		int total=0;
		for (int i=0; i<vehicles.length; i++) {
			if(vehicles[i]!= null)
				total++;
			else
				break;
		}
		return total;
		}
	
	public void grow () {
		age++;
	}
	public void eat () {
		if(food>0) {
			hunger-=1;
			food -=1;
			System.out.println("Yummy, I ate all");
		}
		else {
			System.out.println("Nor enough food, please buy food");
		}
		}
		
	public void work () {
		if(hunger<5) {
			wealth+= 10.0;
			hunger+=0.5;
			System.out.println("Woah, I worked a lot");
		}
		else {
			System.out.println("Too hungary to work");
		}
	}
	public void buyFood () {
		if(wealth>5) {
			wealth -= 4.5;
			food++;
			System.out.println("Yoooo! I bought some food");
		}
		else {
			System.out.println("Not enough money, please work");
		}
	}

}
